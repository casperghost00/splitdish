<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >    
    
    <Button 
        android:id="@+id/add_course_button"
        android:text="Add Course"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
		android:layout_above="@+id/bottom_dialog_layout"
		android:layout_toLeftOf="@+id/send_to_kitchen_button"
        />
    
    <Button 
        android:id="@+id/send_to_kitchen_button"
        android:text="To Kitchen"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
		android:layout_above="@+id/bottom_dialog_layout"
		android:layout_toLeftOf="@+id/add_item_button"
        />
    
    <Button 
        android:id="@+id/add_item_button"
        android:text="Add Item"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
		android:layout_above="@+id/bottom_dialog_layout"
		android:layout_alignParentRight="true"
        />"
    
    <LinearLayout
        android:id="@+id/bottom_dialog_layout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal" 
        android:layout_alignParentBottom="true" />

</RelativeLayout>