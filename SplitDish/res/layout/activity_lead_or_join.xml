<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LeadOrJoinActivity" >

    <Button
        android:id="@+id/join_party_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_party_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        android:text="@string/join_party" />

    <Button
        android:id="@+id/create_party_button"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="74dp"
        android:text="@string/lead_party" 
        android:onClick="mapSearch" />

</RelativeLayout>